@model abc.Models.JobApplied
@{
    ViewBag.Title = "ShowUpcomingInterviewee";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="row-same-height">
            <div class="col-lg-12">

                <!-- TABLE: LATEST ORDERS -->
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">View Upcoming Interviews</h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>


                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="example1" class="table table-bordered table-striped">

                                <thead>

                                    <tr>
                                        <th>User Name</th>
                                        <th>Applied For</th>
                                        <th>Applied On</th>
                                        <th>Interview Date</th>
                                        <th>View Details</th>
                                        
                                        

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.GetUpcomingInterviewee)
                                    {



                                        <tr>
                                            <td> @item.UserRegistration.UserRegistration_UserName</td>
                                            <td>@item.JobOpening.Designation.Designation_Name</td>
                                            <td>@item.JobApplied_ApplyDate.ToShortDateString()</td>
                                            <td>@item.JobOpening.JobOpenings_InterviewDate</td>
                                            <td>
                                                @{
                                        using (@Html.BeginForm("ViewJobApplicantsCompleteInfo", "Admin", FormMethod.Post))
                                        {
                                            <input type="hidden" name="JobApplied_RegisterationId" value="@item.JobApplied_RegisterationId" />
                                                    <button type="submit" class="btn btn-sm btn-primary btn-flat pull-left" data-toggle="modal" data-target="#Designation-modal">Details</button>
                                        }
                                                }
                                            </td>


                                   </tr>



                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>User Name</th>
                                        <th>Applied For</th>
                                        <th>Applied On</th>
                                        <th>Interview Date</th>
                                        <th>View Details</th>
                                        

                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts
{
    <script type="text/javascript">
        $(function () {
            $("#example1").dataTable();
            $('#example2').dataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "bFilter": false,
                "bSort": true,
                "bInfo": true,
                "bAutoWidth": false
            });
        });

    </script>
}




