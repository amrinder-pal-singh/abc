@model abc.Models.Designation
@{
    ViewBag.Title = "Designation";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 style="text-align:center">Designation Information</h2>

<div class="col-md-12">
    <!-- TABLE: LATEST ORDERS -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Designation Information</h3>
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
       
        
        </div><!-- /.box-header -->
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                    <thead>
                        <tr>
                            <th>Designation Name</th>
                            <th>Qualification Eligibility</th>
                            <th>Skills Required</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.GetDesignationData == null)
                        {
                           <tr><td>Please Enter Some Information</td> </tr>
                        }
                         else
                        {
                            foreach (var item in ViewBag.GetDesignationData)
                            {

                        <tr>
                            <td>@item.Designation_Name </td>
                            <td>@item.Designation_Qualification </td>
                            <td>@item.Designation_KeySkillDescription  </td>
                            <th>
                                @{
                                using (Html.BeginForm("EditDesignationInformation", "Admin", FormMethod.Post))
                                {
                                    <input type="hidden" id="Designation_Id" name="Designation_Id" value="@item.Designation_Id" />
                                                            <input type="submit" class="btn btn-default btn-sm" value="Edit" />
                                }
                                }
                            </th>
                        </tr>
                        }
                        }

                    </tbody>
                </table>
            </div><!-- /.table-responsive -->
        </div><!-- /.box-body -->
        <div class="box-footer clearfix">
            <a href="#" class="btn btn-sm btn-info btn-flat pull-left" data-toggle="modal" data-target="#Designation-modal">Add Designation<i class="fa fa-plus"></i></a>
            <a href="#" class="btn btn-sm btn-success btn-flat pull-right">Cancel</a>
        </div><!-- /.box-footer -->
    </div><!-- /.box -->
</div>



<!---Modal--->
<div class="Designation-information">
    <div class="modal modal-success modal fade" tabindex="-1" id="Designation-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="personal-information">Designation Information</h4>
                </div>
           
           @{
               using (@Html.BeginForm("SaveDesignationInformation","Admin", FormMethod.Post, new { @class = "form-horizontal" }))
               { 
           @Html.HiddenFor(d=>d.Designation_Id)
                <div class="modal-body">
                   
                        <fieldset>
                            <legend>Designation</legend>

                        </fieldset>
                        <br />

                        <div class="form-group">
                            <label for="Designation_Name" class="col-sm-3 control-label">Designation Name</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(d=>d.Designation_Name,new{@class="form-control",@id="DesignationName"})
                               
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="qualification" class="col-sm-3 control-label">Required Qualification</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(d=>d.Designation_Qualification,new{@class="form-control",@id="DesignationQualification"})
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Designation_KeySkillDescription" class="col-sm-3 control-label">Key Skills Required</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(d=>d.Designation_KeySkillDescription,new{@class="form-control",@id="DesignationSkills"})
                                
                            </div>
                        </div>




                   
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline btn-success pull-left " aria-hidden="true" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline">Save changes<i class="fa fa-save"></i></button>
                </div>
           }
            
            }
               
                </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>




