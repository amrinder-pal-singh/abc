
@{
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

@model abc.Models.Country
<div id="page-wrapper">
    <div class="container-fluid">

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Countries</h2>
                </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="col-lg-6">
                            <button type="button" class="btn btn-lg btn-primary" onclick="location.href='@Url.Action("AddEditCountries", "Admin")'">
                                Add New
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                        <div class="col-lg-6">
                            <div class="col-lg-3">
                                <label>Search::</label>
                            </div>
                            <div class="col-lg-9">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search Here" />
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <br />

                    <div class="row">

                    </div>

                    <br />

                    <div class="row">
                        <div class="col-lg-12">

                            <div class="table-responsive">
                                @if (ViewBag.GetAllCountries == null)
                                {
                                    <text>No Country Records Found</text>
                                }
                                else
                                {
                                    <table class="table table-bordered table-hover table-striped">
                                        <thead>
                                            <tr>
                                                <th>S.No</th>
                                                <th>Country Name</th>
                                                <th>Status</th>                                                
                                                <th>Edit</th>
                                                <th>Change Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>


                                            @foreach (var item in ViewBag.GetAllCountries)
                                            {
                                                <tr>
                                                    <td>@item.Country_Id</td>
                                                    <td>@item.Country_Name</td>                                                    
                                                    <td>@item.Country_Status</td>
                                                    <td>
                                                        @{
                                                using (@Html.BeginForm("EditCountry", "Admin", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="Country_Id" value="@item.Country_Id" />
                                                            <input type="submit" class="btn btn-default btn-sm" value="Edit" />
                                                }
                                                        }
                                                    </td>
                                                    <td>
                                                        @{
                                                using (@Html.BeginForm("CountryChangeStatus", "Admin", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="Country_Id" value="@item.Country_Id" />
                                                            <input type="submit" class="btn btn-default btn-sm" value="Toggle" />
                                                }
                                                        }
                                                    </td>
                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>