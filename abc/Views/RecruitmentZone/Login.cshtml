@model abc.Models.UserRegistration
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layoutlogin.cshtml";
}

    <div class="login-box">
    <div class="login-logo">
        <a href="/RecruitmentZone/Login"><b>Recruitment</b>ZONE</a>
    </div><!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form action="/RecruitmentZone/AfterUserLogin" id="Loginform" method="post">
            <div class="form-group has-feedback">
                <input type="text" class="form-control required name" placeholder="User Name" data-placement="top" data-trigger="manual" data-content="Must be at least 3 characters long, and must only contain letters." value="@Model.UserRegistration_UserName" name="UserRegistration_UserName" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control required pass" data-placement="top" data-trigger="manual" data-content="Must be at least 6 characters long, and contain at least one number, one uppercase and one lowercase letter." placeholder="Password" value="@Model.UserRegistration_Password" name="UserRegistration_Password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    
                </div><!-- /.col -->
                <div class="col-xs-4">
                   <button type="submit" class="btn btn-primary btn-block btn-flat" >Sign In</button>
             
                </div><!-- /.col -->
            </div>
        </form>
        <!-- /.social-auth-links -->
        <a href="#">I forgot my password</a><br>
        <a href="/RecruitmentZone/Register" class="text-center">Register a new membership</a>
    </div><!-- /.login-box-body -->
</div>
