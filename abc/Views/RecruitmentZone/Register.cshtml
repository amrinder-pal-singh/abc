@model abc.Models.UserRegistration
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layoutlogin.cshtml";
}
<div class="register-box">
    <div class="register-logo">
        <a href="../../index2.html"><b>Recruitment</b>ZONE</a>
    </div>
    <div class="register-box-body">
        <p class="login-box-msg">Register a new membership</p>
    @{
        
        using (@Html.BeginForm("Register", "RecruitmentZone", FormMethod.Post)) { 
            <div class="form-group has-feedback">
                <input type="text" class="form-control required name" data-placement="top" data-trigger="manual" data-content="Must be at least 3 characters long, and must only contain letters." placeholder="User Name" value="@Model.UserRegistration_UserName" name="UserRegistration_UserName" />
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control password1" data-placement="top" data-trigger="manual" data-content="Must be at least 6 characters long, and contain at least one number, one uppercase and one lowercase letter." placeholder="Password" value="@Model.UserRegistration_Password" name="UserRegistration_Password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control  password1_repeat" data-placement="top" data-trigger="manual" data-content="Confirm Password Should Match Password" placeholder="Retype Password" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            
            <div class="row">
                <div class="col-xs-8">
                    
                </div><!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                </div><!-- /.col -->
            </div>}
        
    }
        <a href="/RecruitmentZone/Login" class="text-center">I already have a membership</a>
    </div><!-- /.form-box -->
</div>

